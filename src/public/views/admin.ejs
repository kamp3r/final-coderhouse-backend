<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="../css/style.css">
  <title>E-Shop</title>
</head>
<%-include('./partials/header.ejs')%>

<body class="flex flex-col min-h-screen">
  <section class="mx-5">

    <div class="flex justify-center my-3">
    <a href="/admin/addProduct" class="py-3 px-3 font-medium text-white bg-blue-900 rounded hover:bg-blue-400 transition duration-300 text-center">+ Agregar Producto</a>
    </div>
    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
            <div class="overflow-hidden">
              <table class="min-w-full text-center">
                <thead class="border-b bg-gray-800">
                  <tr>
                    <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                      ID
                    </th>
                    <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                      Nombre
                    </th>
                    <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                      Precio
                    </th>
                    <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                      Imagen
                    </th>
                    <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                        Descripcion
                      </th>
                      <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                        Codigo
                      </th>
                      <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                        Stock
                      </th>
                      <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                        Editar
                      </th>    
                      <th scope="col" class="text-base font-medium text-white px-6 py-4 text-center">
                        Borrar
                      </th>      
                  </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-1">
                                <%= product.id %>
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-1">
                                <%= product.title %>
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-1">
                                $<%= product.price %>
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-1">
                                <img src="/images/products/<%=product.thumbnail%>" alt="<%=product.name%>" class="max-w-xs">
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-1">
                                <%= product.description %>
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-1">
                                <%= product.code %>
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-1">
                                <%= product.stock %>
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <a href="/editProduct/<%=product.id%>" class="text-sm leading-5 text-gray-500 hover:text-gray-900">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                      </svg>
                                </a>
                            </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                            <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <form method="POST" action="api/products/<%=product.id %>?_method=DELETE">
                                <button class="text-sm leading-5 text-gray-500 hover:text-gray-900">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                      </svg>
                                </button>
                                </form>
                            </div>
                        </div>
                        </td>
                  </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </section>

  <%-include('./partials/footer.ejs')%>
  <script src="../JS/index.js"></script>
</body>
</html>