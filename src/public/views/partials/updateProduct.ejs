<div class="min-h-screen p-6 bg-gray-100 flex items-center justify-center">
    <div class="container max-w-screen-lg mx-auto">
      <div>
        
        <% if(product) { %>
        <form action="/api/products/edit/<%=product._id%>?_method=PATCH" method="POST" enctype="multipart/form-data">
        <div class="bg-white rounded shadow-lg p-4 px-4 md:p-8 mb-6">
          <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 lg:grid-cols-3">
            <div class="text-gray-600">
              <h2 class="font-medium text-xl">Actualizar producto</h2>
            </div>
  
            <div class="lg:col-span-2">
              <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 md:grid-cols-5">
                <div class="md:col-span-5">
                  <label for="title">Nombre</label>
                  <input type="text" name="title" id="title" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="<%=product.title%>"/>
                </div>
  
                <div class="md:col-span-5">
                  <label for="description">Descripción</label>
                  <input type="text" name="description" id="description" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="<%=product.description%>"/>
                </div>
  
                <div class="md:col-span-3">
                  <label for="thumbnail">Foto</label>
                  <input type="file" name="thumbnail" id="thumbnail" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50"/>
                </div>
  
                <div class="md:col-span-2">
                  <label for="price">Precio</label>
                    <input type="text" name="price" id="price" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="<%=product.price%>"/>
                </div>

                <div class="md:col-span-3">
                    <label for="code">Código</label>
                    <input type="text" name="code" id="code" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="<%=product.code%>"/>
                  </div>
    
                  <div class="md:col-span-2">
                    <label for="stock">Stock</label>
                      <input type="text" name="stock" id="stock" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="<%=product.stock%>"/>
                  </div>
  
                <div class="md:col-span-5 text-right">
                  <div class="inline-flex items-end">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit</button>
                  </div>
                </div>
  
              </div>
            </div>
          </div>
        </div>
        </form>
        <% } %>
      </div>
    </div>
  </div>