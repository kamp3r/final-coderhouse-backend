<%if(user){%>
    <div class="bg-no-repeat bg-cover bg-center relative" style=" background-image: url('../images/385388d0966a18ac7eb37c388b10c9ec--wine-wallpaper-wine-collection.jpg');"><div
      class="absolute bg-gradient-to-b from-gray-200 to-gray-400 opacity-75 inset-0 z-0"
    ></div>
    <div class="min-h-screen sm:flex sm:flex-row mx-0 justify-center">
      <div class="flex-col flex self-center p-10 sm:max-w-5xl xl:max-w-2xl z-10">
        <div class="self-start hidden lg:flex flex-col text-white">
          <h1 class="mb-3 font-bold text-5xl text-gray-900">
            Aquí podrás editar tus datos
          </h1>
        </div>
      </div>
      <div class="flex justify-center self-center z-10 my-20">
        <form action="auth/edit/<%=user._id%>?_method=PATCH" method="POST" enctype="multipart/form-data" class="p-12 bg-white mx-auto rounded-2xl w-100">
          <div class="mb-4">
            <h3 class="font-semibold text-2xl text-gray-800">Editar mi información</h3>
          </div>
          <div class="space-y-5">
              <div class="space-y-2">
                  <label class="text-sm font-medium text-gray-700 tracking-wide"
                    >Nombre</label
                  >
                  <input
                    class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
                    name="name"
                    type="text"
                    value="<%=user.name%>"
                  />
                </div>
                <div class="space-y-2">
                  <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
                    Apellido
                  </label>
                  <input
                    class="w-full content-center text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
                    name="lastName"
                    type="text"
                    value="<%=user.lastName%>"
                  />
                </div>
                <div class="space-y-2">
                  <label class="text-sm font-medium text-gray-700 tracking-wide"
                    >Dirección</label
                  >
                  <input
                    class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
                    name="address"
                    type="text"
                    value="<%=user.address%>"
                  />
                </div>
                <div class="space-y-2 flex flex-col">
                  <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
                    Teléfono
                  </label>
                  <input
                    class="w-full content-center text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
                    id="phoneupdate"
                    name="full_phone"
                    type="tel"
                    value="<%=user.phone%>"
                  />
                </div>
                <div class="space-y-2">
                  <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
                    Foto de perfil
                  </label>
                  <input
                    class="w-full content-center text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
                    name="picture"
                    type="file"
                    
                  />
                </div>
            <div class="space-y-2">
              <label class="text-sm font-medium text-gray-700 tracking-wide"
                >Email</label
              >
              <input
                class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
                name="email"
                type="email"
                value="<%=user.email%>"
              />
            </div>
            <div class="space-y-2">
              <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
                Password
              </label>
              <input
                class="w-full content-center text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
                name="password"
                type="password"
                placeholder="Ingrese su clave si desea cambiarla"
              />
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center"></div>
            </div>
            <div>
              <button
                type="submit"
                class="w-full flex justify-center bg-green-400 hover:bg-green-500 text-gray-100 p-3 rounded-full tracking-wide font-semibold shadow-lg cursor-pointer transition ease-in duration-500"
              >
                Cambiar datos
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    </div>
    <%}%>
    
    
